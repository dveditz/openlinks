{
  "manifest_version": 3,
  "name": "Open Selected Links",
  "version": "1.0",
 
  "description": "Open selected links in new tabs (bug triage helper)",
  "developer": {
    "name": "Daniel Veditz"
  },
  "icons": {
    "48": "ic_open_in_new_black_48px.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "selected-links@dveditz"
    },
    "gecko_android": {}
  },

  "permissions": [
    "activeTab",
    "contextMenus",
    "cookies",
    "scripting"
  ],
  
  "background": {
    "scripts": [ "openselectedlinks.js" ]
  }
}